# Terra Invicta Advisory System - Environment Configuration
# Copy this file to .env and fill in your actual paths
# Usage: cp .env.dist .env

# =============================================================================
# KOBOLDCPP CONFIGURATION
# =============================================================================

# KoboldCPP API endpoint
KOBOLDCPP_URL=http://localhost:5001

# Path to KoboldCPP installation directory
KOBOLDCPP_DIR=/home/user/koboldcpp

# Path to model file (Mistral 7B Q4 recommended)
KOBOLDCPP_MODEL=/home/user/koboldcpp/models/mistral-7b-q4.gguf

# =============================================================================
# TERRA INVICTA GAME PATHS
# =============================================================================

# Terra Invicta game installation directory
GAME_INSTALL_DIR=/home/user/TerraInvicta

# Game version (for dependency tracking)
GAME_VERSION=1.0.0

# Terra Invicta saves directory (adjust based on your system)
# Linux default: ~/.local/share/Pavonis Interactive/Terra Invicta
# Windows (WSL): /mnt/c/Users/YourName/AppData/LocalLow/Pavonis Interactive/Terra Invicta
GAME_SAVES_DIR=/home/user/.local/share/Pavonis Interactive/Terra Invicta

# Current savegame filename (without path)
CURRENT_SAVEGAME=savegame.json.gz

# Game template paths (scripts derive these from GAME_INSTALL_DIR)
# Templates: ${GAME_INSTALL_DIR}/TerraInvicta_Data/StreamingAssets/Templates
# Localization: ${GAME_INSTALL_DIR}/TerraInvicta_Data/StreamingAssets/Localization/en

# =============================================================================
# ADVISORY SYSTEM PATHS (relative to TerraInvicta/ root)
# =============================================================================

# Source directory (human-editable files)
SRC_DIR=./src

# Build directory (optimized runtime artifacts)
BUILD_DIR=./build

# Generated files directory (conversation history, tier state, filters)
GENERATED_DIR=./generated

# Logs directory
LOGS_DIR=./logs

# Snapshots directory (archived game states)
SNAPSHOTS_DIR=./snapshots

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable/disable features
ENABLE_SPECTATORS=true
ENABLE_STAGE_DIRECTIONS=true

# Performance settings
MAX_RESPONSE_TOKENS=300
CONTEXT_WINDOW_SIZE=8192

# =============================================================================
# TIER SYSTEM
# =============================================================================

# Global tier (1, 2, or 3) - set manually or let CODEX determine
CURRENT_TIER=1

# =============================================================================
# NOTES
# =============================================================================

# - Do NOT commit .env to version control (add to .gitignore)
# - Paths can be absolute or relative
# - Adjust GAME_SAVES_DIR based on your installation method (Steam/GOG/etc)
# - KOBOLDCPP_URL should match your KoboldCPP server configuration
# - Create .env by copying: cp .env.example .env
