  "common_queries": {
    "lunar_sites": "SELECT h.displayName, p.water_mean FROM hab_sites h JOIN mining_profiles p ON h.miningProfile = p.dataName WHERE h.body = 'Luna'",
    "water_sources": "SELECT displayName, body, water_mean FROM hab_sites h JOIN mining_profiles p ON h.miningProfile = p.dataName WHERE p.water_mean > 0 ORDER BY p.water_mean DESC"
